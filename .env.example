# ============================================
# AI Tech Recruiter - Environment Variables
# ============================================
# 
# INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual credentials
# 3. NEVER commit .env file to git!
#
# ============================================

# =====================================
# APPLICATION
# =====================================

NODE_ENV=production
APP_NAME=AI Tech Recruiter
APP_URL=https://your-domain.com
APP_PORT=3000

# Logging
LOG_LEVEL=info
DEBUG=false

# =====================================
# IBM WATSONX ORCHESTRATE
# =====================================

# Get from: https://cloud.ibm.com/watsonx
WATSONX_API_KEY=your_watsonx_api_key_here
WATSONX_URL=https://us-south.ml.cloud.ibm.com
WATSONX_PROJECT_ID=your_project_id_here
WATSONX_SPACE_ID=your_space_id_here

# Agent Configuration
WATSONX_AGENT_ID=your_agent_id_here

# =====================================
# N8N WORKFLOW AUTOMATION
# =====================================

# n8n Instance
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_secure_password

# Webhook Base URL
WEBHOOK_URL=https://your-n8n-domain.com/

# Timezone
GENERIC_TIMEZONE=America/Sao_Paulo

# Encryption
N8N_ENCRYPTION_KEY=your_32_character_encryption_key

# =====================================
# TELEGRAM BOT
# =====================================

# Get token from @BotFather on Telegram
# Tutorial: https://core.telegram.org/bots/tutorial
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567

# Bot Configuration
TELEGRAM_BOT_NAME=AI Tech Recruiter Bot
TELEGRAM_BOT_USERNAME=ai_tech_recruiter_bot

# Test/Demo Chat ID (for development)
TELEGRAM_TEST_CHAT_ID=123456789

# Webhook URL (if using webhooks instead of polling)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# =====================================
# GITHUB API
# =====================================

# Get token from: https://github.com/settings/tokens
# Required scopes: read:user, user:email
GITHUB_API_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_API_VERSION=2022-11-28

# GitHub Search Configuration
GITHUB_SEARCH_MAX_RESULTS=100
GITHUB_RATE_LIMIT_BUFFER=50

# =====================================
# GOOGLE WORKSPACE APIs
# =====================================

# Google OAuth 2.0 (for Calendar & Gmail)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-domain.com/oauth/google/callback

# Google Calendar
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_TIMEZONE=America/Sao_Paulo

# Gmail
GMAIL_FROM_NAME=AI Tech Recruiter
GMAIL_FROM_EMAIL=noreply@your-domain.com

# Service Account (alternative to OAuth)
# Get from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./credentials/google-service-account.json

# =====================================
# DATABASE (Optional - for persistence)
# =====================================

# PostgreSQL
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_tech_recruiter
DATABASE_USER=recruiter_admin
DATABASE_PASSWORD=change_this_db_password
DATABASE_SSL=true

# Redis (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password
REDIS_DB=0

# =====================================
# SECURITY
# =====================================

# JWT for API authentication
JWT_SECRET=your_very_long_random_jwt_secret_at_least_32_characters
JWT_EXPIRATION=7d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# =====================================
# WEBHOOKS & CALLBACKS
# =====================================

# Webhook secret for signature verification
WEBHOOK_SECRET=your_webhook_signing_secret_here

# MCP (Model Context Protocol) Callbacks
MCP_CALLBACK_BASE_URL=https://your-domain.com/mcp/callback
MCP_CALLBACK_TIMEOUT=86400

# n8n Webhook Endpoints (will be generated after deployment)
WEBHOOK_GITHUB_SEARCH=https://your-n8n.com/webhook/github-search
WEBHOOK_TELEGRAM_CONTACT=https://your-n8n.com/webhook/telegram-contact
WEBHOOK_WAIT_ACCEPTANCE=https://your-n8n.com/webhook/wait-acceptance
WEBHOOK_SCHEDULE_INTERVIEW=https://your-n8n.com/webhook/schedule-interview
WEBHOOK_SEND_EMAIL=https://your-n8n.com/webhook/send-email

# =====================================
# MONITORING & LOGGING
# =====================================

# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Logging
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# =====================================
# EMAIL CONFIGURATION (SMTP Alternative)
# =====================================

# If not using Gmail API, you can use SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# =====================================
# FEATURE FLAGS
# =====================================

# Enable/disable features
FEATURE_GITHUB_INTEGRATION=true
FEATURE_TELEGRAM_INTEGRATION=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_CALENDAR_SCHEDULING=true
FEATURE_LINKEDIN_INTEGRATION=false
FEATURE_WHATSAPP_INTEGRATION=false

# =====================================
# DEMO MODE (for development/testing)
# =====================================

# Demo configuration
DEMO_MODE=false
DEMO_USE_FAKE_DATA=false
DEMO_SKIP_EXTERNAL_APIS=false
DEMO_AUTO_APPROVE_ALL=false

# Test data
TEST_CANDIDATE_EMAIL=test.candidate@example.com
TEST_CANDIDATE_CHAT_ID=987654321
TEST_RECRUITER_EMAIL=test.recruiter@example.com

# =====================================
# PERFORMANCE TUNING
# =====================================

# API Timeouts (milliseconds)
API_TIMEOUT=30000
GITHUB_API_TIMEOUT=10000
TELEGRAM_API_TIMEOUT=5000
GOOGLE_API_TIMEOUT=15000

# Concurrent Operations
MAX_CONCURRENT_REQUESTS=10
MAX_CONCURRENT_CANDIDATES=5

# Cache TTL (seconds)
CACHE_GITHUB_SEARCH=3600
CACHE_CANDIDATE_PROFILE=1800

# =====================================
# COMPLIANCE & PRIVACY
# =====================================

# Data retention (days)
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# Privacy
ANONYMIZE_LOGS=true
ENABLE_GDPR_MODE=true
ENABLE_LGPD_MODE=true

# Consent management
REQUIRE_EXPLICIT_CONSENT=true

# =====================================
# NOTIFICATIONS (Optional services)
# =====================================

# Slack (for team notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#recruiting

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# PagerDuty (for alerts)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key_here

# =====================================
# BACKUP & DISASTER RECOVERY
# =====================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# =====================================
# DEVELOPMENT ONLY
# =====================================

# Hot reload
HOT_RELOAD=true

# Debug mode
DEBUG_WEBHOOK_PAYLOADS=false
DEBUG_API_RESPONSES=false

# Mock external services
MOCK_GITHUB_API=false
MOCK_TELEGRAM_API=false
MOCK_GOOGLE_API=false

# =====================================
# NOTES
# =====================================

# Remember to:
# 1. Change all passwords and secrets
# 2. Use strong, unique values for each secret
# 3. Enable 2FA on all accounts
# 4. Rotate secrets regularly (every 90 days)
# 5. Never commit .env to version control
# 6. Use a secrets manager in production (e.g., AWS Secrets Manager, HashiCorp Vault)